{
  "manifest_version": 2,
  "name": "Crap It!",
  "version": "1.0.0",
  "author": "b0r3d0m",
  "homepage_url": "https://github.com/b0r3d0m/crapit",

  "description": "Crap It! provides you an easy way to share your code review thoughts",
  "icons": {
    "16": "res/icons/poop-16.png",
    "32": "res/icons/poop-32.png",
    "64": "res/icons/poop-64.png"
  },

  "options_ui": {
    "chrome_style": true,
    "page": "src/pages/options.html"
  },

  "background": {
    "scripts": ["src/js/background.js"]
  },

  "permissions": ["contextMenus", "tabs", "storage", "http://*/*", "https://*/*"]
}
